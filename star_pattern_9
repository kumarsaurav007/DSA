"""
   *       * 
  * *     * * 
 * * *   * * * 
* * * * * * * * 
"""

n = 4
for i in range(n):
    for j in range(n-1-i):
        print("",end=" ")
    for k in range(i+1):
        print("*", end=" ")
    for l in range(n-i-1):
        print(" ", end=" ")
    for m in range(i+1):
        print("*", end=" ")
    print()

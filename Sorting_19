# Maximize Area of Square Hole in Grid :-

def maximizeSquareHoleArea(self, n: int, m: int, hBars: List[int], vBars: List[int]) -> int:
        hBars.sort()
        vBars.sort()

        ans = 1
        counthBars = 1
        for i in range(len(hBars)):
            curr = hBars[i]
            if curr + 1 in hBars:
                ans += 1
                counthBars = max(counthBars, ans)
            else:
                ans = 1
        
        length = counthBars

        ans = 1
        countvBars = 1
        for i in range(len(vBars)):
            curr = vBars[i]
            if curr + 1 in vBars:
                ans += 1
                countvBars = max(countvBars, ans)
            else:
                ans = 1

        width = countvBars

        sides = min(length, width) + 1
        return sides*sides

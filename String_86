# Minimum Deletions to Make String Balanced :-

def minimumDeletions(self, s: str) -> int:
        b_count = 0
        del_count = 0

        for ch in s:
            if ch == 'b':
                b_count += 1
            else:  # 'a'
                del_count = min(del_count + 1, b_count)

        return del_count

while True:
    a=int(input("Enter first number:"))
    b=int(input("Enter second number:"))

    print("1:addition""\n""2:subtraction""\n""3:division""\n""4:multiplication")
    operation=int(input("Select from above opetions:"))

    def mathematics(a,b):
        if operation==1:
            add=a+b
            print("Result of addition: ",int(add))
        elif operation==2:
            sub=a-b
            print("Result of subtraction: ",int(sub))
        elif operation==3:
            div = a/b
            print("Result of division: ",int(div))
        elif operation==4:
            mul=a*b
            print("result of multiplication: ",int(mul))
        else:
            print("select correct operation")

    mathematics(a,b)
    repeat = input("Do you want to perform another calculation? (yes/no): ").lower()
    if repeat != 'yes':
        break

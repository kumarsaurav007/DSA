"""
* * * * * * * * 
 * * *   * * * 
  * *     * * 
   *       * 
"""

n = 4
for i in range(n):
    for j in range(i):
        print("", end=" ")
    for k in range(n-i):
        print("*",end=" ")
    for l in range(i):
        print(" ",end=" ")
    for m in range(n-i):
        print("*", end=" ")
    print()

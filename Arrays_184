# Divide an Array Into Subarrays With Minimum Cost I :-

def minimumCost(self, nums: List[int]) -> int:
        n = len(nums)
        ans = 0

        ans += nums[0]
        min1 = float('inf')
        min2 = float('inf')

        for i in range(1,n):
            if nums[i] < min1:
                min2 = min1
                min1 = nums[i]
            elif nums[i] <min2:
                min2 = nums[i]
        
        ans += min1 + min2
        return ans

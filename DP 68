# Number of Ways to Paint N Ã— 3 Grid :-

def numOfWays(self, n: int) -> int:
        MOD = 10**9 + 7

        diff = 6
        same = 6

        for _ in range(2, n + 1):
            new_diff = (diff * 2 + same * 2) % MOD
            new_same = (diff * 2 + same * 3) % MOD
            diff, same = new_diff, new_same

        return (diff + same) % MOD

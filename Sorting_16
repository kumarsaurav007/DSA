# Coupon Code Validator :-

def validateCoupons(self, code: List[str], businessLine: List[str], isActive: List[bool]) -> List[str]:
        valid_business = ["electronics", "grocery", "pharmacy", "restaurant"]
        order = {b: i for i, b in enumerate(valid_business)}

        valid = []

        for c, b, active in zip(code, businessLine, isActive):
            # Check active
            if not active:
                continue

            # Check business line
            if b not in order:
                continue

            # Check code: non-empty & only alphanumeric + underscore
            if not c or not re.fullmatch(r"[A-Za-z0-9_]+", c):
                continue

            valid.append((order[b], c))

        # Sort by businessLine order, then lexicographically by code
        valid.sort(key=lambda x: (x[0], x[1]))

        return [c for _, c in valid]

# Construct the Minimum Bitwise Array II :-

def minBitwiseArray(self, nums: List[int]) -> List[int]:
        ans = []

        for i in nums:
            if i == 2:
                ans.append(-1)
                continue

            temp = i
            cnt = 0

            # count trailing 1s
            while temp & 1:
                cnt += 1
                temp >>= 1

            # smallest j
            j = i - (1 << (cnt - 1))
            ans.append(j)

        return ans

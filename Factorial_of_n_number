while True:
    def factorial(n):
        if n ==0:
            return 1
        else:
            result = n*factorial(n-1)
            return result
    n = int(input("Enter a number:"))
    print("Answer:",factorial(n))

    repeat = input("Wanna try again? (yes/no): ").lower()
    if repeat != 'yes':
        break

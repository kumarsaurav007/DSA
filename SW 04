# Minimum Difference Between Highest and Lowest of K Scores :-

def minimumDifference(self, nums: List[int], k: int) -> int:
        nums.sort()
        n = len(nums)

        if n == 1:
            return 0

        ans = float('inf')
        for i in range(n - k + 1):
            window = nums[i:i+k]
            diff = (window[k-1] - window[0])
            ans = min(ans, diff)

        return ans

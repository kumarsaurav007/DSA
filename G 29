# Set Intersection Size At Least Two :-

def intersectionSizeTwo(self, intervals: List[List[int]]) -> int:
        intervals.sort(key=lambda x: (x[1], -x[0]))

        a = b = -1
        ans = 0

        for l, r in intervals:
            if b < l:
                ans += 2
                a = r - 1
                b = r
            elif a < l <= b:
                ans += 1
                a = b
                b = r

        return ans

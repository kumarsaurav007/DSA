# Maximum Number of K-Divisible Components :-

def maxKDivisibleComponents(self, n: int, edges: List[List[int]], values: List[int], k: int) -> int:
        graph = [[] for _ in range(n)]
        for a, b in edges:
            graph[a].append(b)
            graph[b].append(a)

        ans = 0

        def dfs(node, parent):
            nonlocal ans
            s = values[node]

            for nei in graph[node]:
                if nei != parent:
                    s += dfs(nei, node)

            if s % k == 0:
                ans += 1
                return 0
            return s

        dfs(0, -1)
        return ans

def countGoodNumbers(self, n: int) -> int:
        MOD = 10**9 + 7

        def mod_pow(base, exp):
            result = 1
            while exp > 0:
                if exp % 2:
                    result = (result * base) % MOD
                base = (base * base) % MOD
                exp //= 2
            return result

        even_positions = (n + 1) // 2
        odd_positions = n // 2
        return (mod_pow(5, even_positions) * mod_pow(4, odd_positions)) % MOD

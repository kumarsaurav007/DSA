# Minimum Absolute Difference :-

def minimumAbsDifference(self, arr: List[int]) -> List[List[int]]:
        arr.sort()
        n = len(arr)

        minAbsoluteDifference = float('inf')
        for i in range(1, n):
            currentDifference = abs(arr[i] - arr[i - 1])
            minAbsoluteDifference = min(minAbsoluteDifference, currentDifference)

        ans = []
        for i in range(1, n):
            if abs(arr[i] - arr[i - 1]) == minAbsoluteDifference:
                ans.append([arr[i - 1], arr[i]])

        return ans

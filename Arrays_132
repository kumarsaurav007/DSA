# Count Hills and Valleys in an Array :-

def countHillValley(self, nums: List[int]) -> int:
        i = 0
        j = 1
        count = 0

        while (j + 1) < len(nums):
            if (nums[i] < nums[j] and nums[j] > nums[j + 1]) or (nums[i] > nums[j] and nums[j] < nums[j + 1]):
                count += 1
                i = j
            j += 1
        
        return count

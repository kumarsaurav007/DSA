# Maximum Number of Distinct Elements After Operations :-

def maxDistinctElements(self, nums: List[int], k: int) -> int:
        nums.sort()
        used = set()
        next_free = -10**18  # smallest possible available position
        
        for num in nums:
            val = max(num - k, next_free)
            if val <= num + k:
                used.add(val)
                next_free = val + 1  
                
        return len(used)
